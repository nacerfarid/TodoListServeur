{
    "compilerOptions": {
        "noUnusedParameters": false,
        "noUnusedLocals": true,
        "module": "commonjs",
        "target": "es2015",
        "noImplicitAny": false,
        "sourceMap": false,
        "outDir": "./appJS",
        "watch": true,
        "types": [
            "node"
        ],
        "baseUrl": ".", // This must be specified if "paths" is.
        "paths": {
          "@data/*": ["./app/data/*"],
          "@OAuth/*": ["./app/OAuth/*"],
          "@User/*": ["./app/User/*"]
        }
    },
    "include": [
        "app/**/*.ts"
    ],
    "exclude" : [
        "./appJS",
        "./node_modules"
    ]
}
